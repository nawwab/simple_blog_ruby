<%= form_with model: article do |form| %>
  <div class="flex flex-col border p-4 rounded">
    <div class="mb-2">
      <%= form.label :title, 'Title', class: 'text-gray-500 mr-2' %>
      <%= form.text_field :title, class: 'border-b' %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <p class="text-sm text-red-700">
          <%= message %>
        </p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: 'hidden' %>
      <%= form.text_area :body, class: 'w-full border p-2', placeholder: 'Write your comment here' %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <p class="text-sm text-red-700">
          <%= message %>
        </p>
      <% end %>
    </div>

    <div>
      <%= form.label :status %>
      <%= form.select :status, ['public', 'private', 'archived'], {}, { selected: 'public', class: 'bg-white border rounded-sm p-1' } %>
    </div>
  
    <%= form.submit class: 'bg-green-400 rounded px-2 py-1 text-sm text-white self-end' %>
  </div>
<% end %>
