<% if comment.public? %>
  <div class="mb-2 border rounded p-4">
    <p class="font-semibold text-gray-600">
      <%= comment.commenter %>
    </p>
    
    <p>
      <%= comment.body %>
    </p>

    <p>
      <%= link_to "Destroy Comment", [comment.article, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure"
      } %>
    </p>
  </div>
<% end %>
